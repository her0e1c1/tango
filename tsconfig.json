{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es7"],
    "types": ["react-native", "react"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": false,
    "noResolve": false,
    "allowJs": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
